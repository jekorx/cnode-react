.logo
  height 90px
  width 90px
  display inline-block
  background-image url(../images/logo.svg)
  background-repeat no-repeat
  background-size cover
  background-position center
  animation logo-spin infinite 20s linear
.header
  height 90px !important
  box-shadow 0 0 10px rgba(0,0,0,.25)
  position relative
  z-index 101
  box-sizing border-box
  &-icon
    font-size 40px
    &-wrap
      position relative
  &-title
    display inline-block
    height 90px
    max-width 52vw
    line-height 90px
    font-size 38px
    padding-right 50px
    box-sizing border-box
    overflow hidden
    text-overflow ellipsis
    white-space nowrap
.badge
  display block
  position absolute
  top 0
  right 0
  padding 6px
  background-color #FF3434
  border-radius 100%
  box-shadow 0 0 2px 2px rgba(255, 52, 52, .25)
  &-num
    position absolute
    top 28px
    right 270px
    color #FFF
    font-style normal
    font-size 28px
    background-color #FF3434
    padding 4px 8px
    border-radius 28px
.content
  height calc(100% - 90px)
  position relative
.menu
  background-color #FFF
  height 100vh
  width 50vw
  margin 0
  padding 90px 0 0 0
  box-sizing border-box
  list-style none
.login
  padding 30px 0
  text-align center
  &-icon
    font-size 70px
    color #1890ff
  &-text
    padding 0 20px
    font-size 38px
    color #000
    vertical-align middle
.divider
  border-top 1px solid #DDD
.link
  padding 30px 0
  display block
  color #000
  background-color #FFF
  text-align center
  font-size 32px
  position relative
  &-icon
    display inline-block
    width 100px
    font-size 32px
  &-title
    font-size 32px
    padding-right 40px
    vertical-align middle
.indicator
  font-size 26px
@keyframes logo-spin
  0%
    transform rotate(0deg)
  10%
    transform rotate(60deg)
  20%
    transform rotate(40deg)
  30%
    transform rotate(120deg)
  40%
    transform rotate(100deg)
  50%
    transform rotate(180deg)
  60%
    transform rotate(160deg)
  70%
    transform rotate(240deg)
  80%
    transform rotate(220deg)
  90%
    transform rotate(280deg)
  100%
    transform rotate(360deg)
