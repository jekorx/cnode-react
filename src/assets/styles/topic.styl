.topic
  padding 0 20px
  height 100%
  width 750px
  box-sizing border-box
  border-bottom 1px solid #EEE
.title
  vertical-align middle
  &-wrap
    padding 10px
    margin 20px 0
    font-size 36px
    color #2c3e50
    line-height 1.5
    background-color #f0f0f0
    border-radius 6px
.edit
  font-size 32px
  padding-left 10px
  color #1890ff
  vertical-align top
.info
  display flex
  padding 20px 0 60px
  align-items center
.avatar
  display inline-block
  width 90px
  height 90px
  border-radius 50%
  background-size cover
  background-color #EEE
  margin-right 20px
.center
  display flex
  flex-direction column
  justify-content space-around
  flex 1 1 auto
  font-size 28px
  line-height 1.5
.collect
  font-size 28px !important
  &-wrap
    text-align right
    width 190px
.tag
  padding 8px 20px
  border-radius 8px
  font-size 26px
  &-author
    color #fff
    background-color #80bd01
    font-size 26px
    padding 4px 6px
    margin-left 8px
    border-radius 6px
  &-wrap
    margin-bottom 10px
    text-align right
.reply
  padding 0 20px
  border-bottom 1px solid #EEE
  width 100vw
  box-sizing border-box
  &-header
    margin 40px -20px 0
    padding 20px
    font-size 30px
    border-top 1px solid #EEE
    display flex
    align-items center
    justify-content space-between
  &-count
    color #1890ff
    margin 0 10px
  &-info
    flex 1
    display flex
    align-items center
    font-size 28px
  &-name
    padding-right 6px
  &-left
    flex 1
  &-right
    display flex
    align-items center
  &-add
    float right
  &-icon
    font-size 34px
.anchor
  color #1890ff
  margin-left 6px
.user
  display flex
  padding 30px 0
.up-count
  padding-left 10px
  padding-right 20px
.comment
  margin 0 -20px
  font-size 28px
  border-top 1px solid #EEE
.textarea
  width 100%
  height 300px
  padding 20px
  box-sizing border-box
  resize none
  border none
  border-bottom 1px solid #EEE
.btns
  text-align right
  padding-right 5px
.btn
  margin 20px
